{
  "name": "simple-page-for-testing",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "chromedriver": "^141.0.4",
    "fs": "^0.0.1-security",
    "mocha": "^11.7.4",
    "os-utils": "^0.0.14",
    "perf_hooks": "^0.0.1",
    "pidusage": "^4.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-scripts": "5.0.1",
    "selenium-webdriver": "^4.37.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "cypress run",
    "eject": "react-scripts eject",
    "selenium:chrome": "node selenium/test_script_selenium.js --browser=chrome",
    "selenium:chrome:headless": "node selenium/test_script_selenium.js --browser=chrome --headless",
    "selenium:firefox": "node selenium/test_script_selenium.js --browser=firefox",
    "selenium:firefox:headless": "node selenium/test_script_selenium.js --browser=firefox --headless",
    "test:playwright": "playwright test",
    "start:ci": "cross-env HOST=0.0.0.0 PORT=3000 react-scripts start",
    "ci:playwright": "start-server-and-test \"npm run start:ci\" http://127.0.0.1:3000 \"npm run test:playwright\" --wait-on-timeout 120000"

  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.7.2",
    "cross-env": "^10.1.0",
    "cypress": "^14.5.4",
    "cypress-mochawesome-reporter": "^4.0.2",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.3.0",
    "start-server-and-test": "^2.1.3"
  }
}
